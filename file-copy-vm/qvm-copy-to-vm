if [ $# -lt 2 ] ; then
    echo usage: $0 'dest_vmname file [file]+'
    exit 1
fi

VM="$1"
shift

exec /usr/bin/qvm-run --pass-io --localcmd "/usr/lib/qubes/qfile-dom0-agent $@" "$VM" "QUBESRPC qubes.Filecopy dom0"
